################################
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
function cdp () {
  # Exit current venvs, but also exits current shell
  while [[ "$VIRTUAL_ENV" != "" ]]; do exit; done

  cd ${1:-.}; pipenv shell
}

